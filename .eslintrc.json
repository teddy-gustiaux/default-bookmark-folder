{
  "root": true,
  "parserOptions": {
    "ecmaVersion": "latest",
	"sourceType": "module"
  },
  "extends": [
    "prettier"
  ],
  "plugins": [
    "prettier"
  ],
  "env": {
    "browser": true,
    "webextensions": true
  },
  "rules": {
    "no-undef": "off",
    "no-unused-vars": "off",
    "class-methods-use-this": "off",
    "no-underscore-dangle": ["error", { "allowAfterThis": true }],
    "prettier/prettier": "error"
  }
}
